.ActionBar {
  flex: 0 0;
  padding: 20px 10px 20px 20px;
  border-bottom: 1px solid var(--color-border-default);

  &_container {
    display: flex;
  }

  &_searchField {
    flex: 1 1 auto;
    margin-right: 15px;
    color: var(--color-fg-subtle);
  }

  &_actions {
    display: flex;
    flex: 0 1 60px;
    align-items: center;
    justify-content: space-between;
  }

  &_button {
    color: var(--color-fg-default);

    &:not(:last-child) {
      margin-right: 5px;
    }
  }
}
