.ChatListItem {
  /*
     Цвет фона устанавливается через custom-property т.к
     нам нужно одновременно обновлять цвет обводки статуса 
     в компоненте UserAvatar
  */
  --ChatListItem-color-bg: var(--color-bg-default);
  --UserAvatar-color-border: var(--ChatListItem-color-bg);

  position: relative;

  display: flex;

  height: 80px;
  padding: 10px 10px 10px 15px;

  cursor: pointer;

  background-color: var(--ChatListItem-color-bg);
  border-bottom: 1px solid var(--color-border-default);

  transition: background-color var(--transition-duration-fast);

  &_active {
    --ChatListItem-color-bg: var(--color-accent);
  }

  &:focus-visible {
    outline: 2px solid var(--color-accent);
  }

  &:hover:not(&_active) {
    --ChatListItem-color-bg: var(--color-bg-subtle);
  }

  &_avatar {
    flex: 0 0 40px;
  }

  &_details {
    flex-grow: 1;
    margin-left: 12px;
    overflow: hidden;
  }

  &_notifications {
    position: absolute;
    right: 10px;
    bottom: 10px;
  }

  &_row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 7px;
  }

  &_name {
    flex: 1 1 auto;

    padding-right: 4px;
    overflow-x: hidden;

    font-weight: 600;
    text-overflow: ellipsis;
    letter-spacing: 0.03em;
    white-space: nowrap;
  }

  &_timestamp {
    flex-shrink: 0;

    font-size: 11px;
    font-weight: 500;
    color: var(--color-fg-subtle);
    white-space: nowrap;
  }

  &_lastMessageExcerpt {
    display: box;

    padding-right: 40px;
    margin: 0;
    overflow: hidden;

    font-size: 12px;
    font-weight: 500;
    line-height: 1.4;
    color: var(--color-fg-subtle);

    -webkit-box-orient: vertical;

    -webkit-line-clamp: 2;

    strong {
      font-weight: 600;
      color: var(--color-fg-default);
    }
  }
}
