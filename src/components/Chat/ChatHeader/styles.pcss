.ChatHeader {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 0 0 80px;

  height: 80px;
  border-bottom: 1px solid var(--color-border-default);
  padding: 0 30px 0 20px;

  &_profile {
    display: flex;
    align-items: center;
  }

  &_avatar {
    margin-right: 20px;
  }

  &_name {
    font-weight: 500;
    font-size: var(--font-size-base);
  }
}
