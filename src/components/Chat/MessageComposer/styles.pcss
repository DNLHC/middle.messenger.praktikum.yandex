.MessageComposer {
  padding: 18px 25px 22px 20px;

  &_wrapper {
    display: flex;
    align-items: center;
  }

  &_textField {
    flex: 1 1 auto;
    margin-right: 12px;
  }

  &_input {
    padding-top: 15px;
    padding-bottom: 15px;
  }

  &_actions {
    display: flex;
    flex: 0 0;
    align-items: center;
  }

  &_button {
    color: var(--color-fg-subtle);

    &:not(:last-child) {
      margin-right: 10px;
    }
  }
}
