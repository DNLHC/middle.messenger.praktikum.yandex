.ErrorPage {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  height: 100%;
  padding-bottom: 200px;

  text-align: center;

  &_title {
    font-size: 60px;
    font-weight: 600;
    letter-spacing: 0.08em;
    margin-bottom: 20px;
  }

  &_subtitle {
    color: var(--color-fg-subtle);
    font-size: 25px;
    font-weight: 400;
    margin-bottom: 45px;
  }
}
